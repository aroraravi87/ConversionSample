<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm = "clr-namespace:AVSToJVSConversion.ViewModel"
         xmlns:ec="http://schemas.microsoft.com/expression/2010/controls"
         xmlns:cnvt="clr-namespace:AVSToJVSConversion.Common"
         x:Class="AVSToJVSConversion.Views.MainWindow"
        mc:Ignorable="d"
        Title="AVS to JVS Conversion Tool" Height="350" Width="500" ResizeMode="NoResize" HorizontalAlignment="Center" VerticalAlignment="Center"
         Icon="/AVSToJVSConversion;component/Content/Images/icon.jpg"
        >
    <Window.Resources>
        <vm:MainWindowViewModel x:Key="MainVm"></vm:MainWindowViewModel>
        <cnvt:CustomConverter x:Key="Converter"></cnvt:CustomConverter>

        <Style TargetType="ProgressBar">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar" >
                        <Grid x:Name="Root">
                            <Border 
            Name="PART_Track" 
            CornerRadius="2" 
            Background="Black"
            BorderBrush="Gray"
            BorderThickness="2" />
                            <Border 
            Name="PART_Indicator" 
            CornerRadius="2" 
            Background="White" 
            BorderBrush="White" 
            BorderThickness="2" 
            HorizontalAlignment="Left" />
                        </Grid>
                        <ControlTemplate.Triggers>
                            <!-- Getting vertical style working using technique described here: http://stackoverflow.com/a/6849237/7532 -->
                            <Trigger Property="Orientation" Value="Vertical">
                                <Setter TargetName="Root" Property="LayoutTransform">
                                    <Setter.Value>
                                        <RotateTransform Angle="270" />
                                    </Setter.Value>
                                </Setter>

                                <Setter TargetName="Root" Property="Width"
                Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Height}"
              />
                                <Setter TargetName="Root" Property="Height"
                Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Width}"
              />
                            </Trigger>
                        </ControlTemplate.Triggers>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush  ImageSource="/AVSToJVSConversion;component/Content/Images/waves.jpg"  Stretch="UniformToFill"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>




        <TextBox x:Name="textBoxAVSScriptPath" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"  HorizontalAlignment="center" VerticalAlignment="Center" Height="20" IsReadOnly="True" TextWrapping="Wrap"  Width="200" Foreground="Black"              
                 ToolTip="{Binding RelativeSource={RelativeSource Self}, Path=Text }" Text="{Binding AVSPath,Source={StaticResource MainVm}, Mode=TwoWay}" >

        </TextBox>

        <TextBox x:Name="textBoxAVSLibraryPath" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="center" VerticalAlignment="Center" Height="20" IsReadOnly="True"  TextWrapping="Wrap"  Width="200"  ToolTip="{Binding RelativeSource={RelativeSource Self}, Path=Text }" Text="{Binding LibraryPath,Source={StaticResource MainVm}, Mode=TwoWay}"  />

        <TextBox x:Name="textBoxOutputPath" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Center" Height="20" IsReadOnly="True"  TextWrapping="Wrap"  Width="200" ToolTip="{Binding RelativeSource={RelativeSource Self}, Path=Text }" VerticalAlignment="Center"
                  Text="{Binding JVSPath,Source={StaticResource MainVm}, Mode=TwoWay}"/>

        <Button  x:Name="buttonAVSFileSelect" Background="white" Content="Browse" Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2" x:Uid="BrowseAVS" HorizontalAlignment="Right" Height="20"  Width="70"   FontFamily="the-font"
                 Command="{Binding SelectCommand,Source={StaticResource MainVm},Mode=TwoWay}" CommandParameter="{Binding Path=Uid,RelativeSource={RelativeSource Self}}">
        </Button>
        <Button  x:Name="buttonAVSLibraryPathSelect" Content="Browse" x:Uid="BrowseLibrary" HorizontalAlignment="Right" Height="20" Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2"
                      Width="70" 
                     Background="white" FontFamily="Sans-Serif"
                  Command="{Binding SelectCommand,Source={StaticResource MainVm}}" CommandParameter="{Binding Path=Uid,RelativeSource={RelativeSource Self}}">
        </Button>
        <Button  x:Name="buttonOutputPathSelect" Background="white" Content="Browse" x:Uid="BrowseJVS" HorizontalAlignment="Right" Height="20" Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="2" VerticalAlignment="Top" Width="70"  FontFamily="Sans-Serif"
                  Command="{Binding SelectCommand,Source={StaticResource MainVm}}" CommandParameter="{Binding Path=Uid,RelativeSource={RelativeSource Self}}">
        </Button>
        <Button  x:Name="buttonSubmit" Content="Submit" x:Uid="Conversion"  Background="white" HorizontalContentAlignment="Center"    Height="20" Width="70"  FontFamily="Sans-Serif" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="1"  HorizontalAlignment="Center" VerticalAlignment="Center"  Command="{Binding SelectCommand,Source={StaticResource MainVm}}" CommandParameter="{Binding Path=Uid,RelativeSource={RelativeSource Self}}">
        </Button>
        <Button  x:Name="buttonClear" Content="Refresh" x:Uid="Refresh"  Background="white" HorizontalContentAlignment="Right" Height="20" Width="70"  FontFamily="Sans-Serif" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="3"  HorizontalAlignment="Center" VerticalAlignment="Center" Command="{Binding SelectCommand,Source={StaticResource MainVm}}" CommandParameter="{Binding Path=Uid,RelativeSource={RelativeSource Self}}" >
        </Button>


        <Label Content="Script Path*" HorizontalAlignment="Center" Height="26" VerticalAlignment="Center" Width="100" Foreground="White" Grid.Row="1" Grid.Column="0" HorizontalContentAlignment="Right">
            <Label.Effect>
                <DropShadowEffect/>
            </Label.Effect>
        </Label>
        <Label Content="Library Path" HorizontalAlignment="Center" Height="26"  VerticalAlignment="Center" Width="100" Foreground="White" Grid.Row="2" Grid.Column="0" HorizontalContentAlignment="Right">
            <Label.Effect>
                <DropShadowEffect/>
            </Label.Effect>
        </Label>
        <Label Content="Output Path*" HorizontalAlignment="Center" Height="26" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Width="100" Foreground="White" HorizontalContentAlignment="Right">
            <Label.Effect>
                <DropShadowEffect/>
            </Label.Effect>
        </Label>
        <Label Name="labelErrorValidation"  HorizontalAlignment="Center" Height="30" Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="4" VerticalAlignment="Center" FontSize="14" FontWeight="Bold" Opacity="1" Content="{Binding ErrorMessage, Source={StaticResource MainVm}}" Foreground="{Binding Status,Source={StaticResource MainVm},Converter={StaticResource Converter},Mode=Default}">
            <Label.Effect>
                <DropShadowEffect/>
            </Label.Effect>
        </Label>

        <StackPanel  Visibility="{Binding ProgressVisibility, Source={StaticResource MainVm}}"  Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="4" VerticalAlignment="Center" HorizontalAlignment="Center" >
            <ProgressBar Name="ProgressPanel" Width="180" Height="20" Margin="0,10,0,0"  Value="{Binding ProgressStatus,Source={StaticResource MainVm},Mode=OneWay}"
                     Minimum="1" Maximum="{Binding MlsFileCount, Source={StaticResource MainVm},Mode=TwoWay}"
                     >

            </ProgressBar>
            <TextBlock Text="{Binding PageCountMessage, Source={StaticResource MainVm}}"  Foreground="White" FontWeight="Bold" FontSize="11" HorizontalAlignment="Center" VerticalAlignment="Center" Width="280" Height="20" Margin="50,0,0,0"></TextBlock>
        </StackPanel>


        <StackPanel Visibility="{Binding ProgressStatusVisibility, Source={StaticResource MainVm}}"  Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="4" VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal" >
            <TextBlock Text="Success"  Foreground="LawnGreen" FontWeight="Bold" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center" Width="60" Margin="0,10,0,0"></TextBlock>

            <TextBlock Text="{Binding SuccessCount,Source={StaticResource MainVm}}"  Foreground="White" FontWeight="Bold" FontSize="13" HorizontalAlignment="Center" VerticalAlignment="Center" Width="30" Margin="0,10,0,0" TextAlignment="Center"></TextBlock>
            <TextBlock Text="Failed" Foreground="OrangeRed" FontWeight="Bold" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center" Width="60" Margin="0,10,0,0"></TextBlock>
            <TextBlock Text="{Binding FailureCount,Source={StaticResource MainVm}}" Foreground="White" FontWeight="Bold" FontSize="13" HorizontalAlignment="Center" VerticalAlignment="Center" Width="30" Margin="0,10,0,0" TextAlignment="Center"></TextBlock>
        </StackPanel>
    </Grid>
</Window>

